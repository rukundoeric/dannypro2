{
    "root": true,
    "extends": ["airbnb-base"],
    "env": {
      "node": true,
      "es6": true,
      "mocha": true
    },
    "rules": {
      "class-methods-use-this": 0,
      "indent": [
        "error",
        2
    ],
    "linebreak-style": [
      "error",
      "windows"
    ],
    "quotes": [
      "error",
      "single"
    ],
    "semi": [
      "error",
      "always"
    ]
    },
    "parserOptions": {
      "sourceType": "module",
      "allowImportExportEverywhere": true
    }
  }